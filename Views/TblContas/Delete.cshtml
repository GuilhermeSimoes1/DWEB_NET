@model DWEB_NET.Models.TblContas

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Conta de Orçamentos</h1>
<br/>
<h4>Tem a certeza que deseja eliminar?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeConta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeConta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Saldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Saldo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContaID" />
        <input type="submit" value="Apagar Conta" class="btn btn-danger" style="margin-top: 10px" />
        <a asp-action="Index" class="btn btn-link" style="margin-left: 10px; margin-top: 10px">Voltar</a>
    </form>
</div>
