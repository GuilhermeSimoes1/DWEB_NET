@model IEnumerable<DWEB_NET.Models.TblContas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="margin-bottom: 35px;">Adicionar Conta</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeConta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeConta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContaID" class="btn btn-warning" style="margin-left: 10px;">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ContaID">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.ContaID" class="btn btn-danger" style="margin-left: 10px;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
