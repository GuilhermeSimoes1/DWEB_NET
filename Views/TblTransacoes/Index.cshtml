@model IEnumerable<DWEB_NET.Models.TblTransacoes>

@{
    ViewData["Title"] = "Index";
}

<h1>Transações</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="margin-bottom: 35px;">Adicionar Transação</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoTransacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTransacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTransacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTransacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conta.ContaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.TransacaoID" class="btn btn-warning" style="margin-left: 10px;">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.TransacaoID" class="btn btn-info" style="margin-left: 10px;">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.TransacaoID" class="btn btn-danger" style="margin-left: 10px;">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
