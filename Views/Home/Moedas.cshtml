@{
    ViewData["Title"] = "Conversor de Moedas";
}

<link rel="stylesheet" href="~/css/Moedas.css" />

<div class="container d-flex justify-content-center align-items-start" style="padding-top: 20px; height: 100vh;">
    <div class="row">
        <div class="col text-center">
            <h2 style="margin-bottom: 40px;">Conversor de Moedas</h2>
            <form id="conversor-form" method="post">
                <div class="form-group" style="margin-bottom: 40px;">
                    <label for="moeda">Moeda</label>
                    <select id="moeda" name="moeda" class="form-control">
                        <option value="euro">Euro</option>
                        <option value="dolar">Dólar</option>
                        <option value="iene">Iene</option>
                        <option value="libra">Libra</option>
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 40px;">
                    <label for="targetMoeda">Moeda de Destino</label>
                    <select id="targetMoeda" name="targetMoeda" class="form-control">
                        <option value="dolar">Dólar</option>
                        <option value="euro">Euro</option>
                        <option value="iene">Iene</option>
                        <option value="libra">Libra</option>
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 40px;">
                    <label for="valor">Valor</label>
                    <input type="number" id="valor" name="valor" class="form-control" step="0.01" />
                </div>
                <button type="submit" class="btn btn-outline-secondary" style="margin-left: 10px; width: 100px;">Converter</button>
            </form>
            @if (ViewBag.Resultado != null)
            {
                <p class="text-success fw-bold p-3 rounded shadow-sm" style="background-color: #f8f9fa; margin-top: 35px; font-size: 20px;">
                    @ViewBag.Resultado
                </p>
            }
        </div>
    </div>
</div>