@model DWEB_NET.Models.TblOrcamentos

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar Orçamento</h1>
<br/>
<h4>Tem a certeza que deseja apagar?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeOrcamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeOrcamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorNecessario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorNecessario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicial)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataFinal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFinal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorAtual)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorAtual)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrcamentoID"/>
        <input type="submit" value="Apagar" class="btn btn-danger" style="margin-top: 10px" />
        <a asp-action="Details" class="btn btn-link" style="margin-left: 10px; margin-top: 10px">Voltar</a>
    </form>
</div>
