@model DWEB_NET.Models.TblOrcamentos

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Orçamentos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrcamentoID" />
            <div class="form-group">
                <strong><label asp-for="NomeOrcamento" class="control-label"></label></strong>
                <input asp-for="NomeOrcamento" class="form-control" />
                <span asp-validation-for="NomeOrcamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="ValorNecessario" class="control-label"></label></strong>
                <input asp-for="ValorNecessario" class="form-control" />
                <span asp-validation-for="ValorNecessario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="DataInicial" class="control-label"></label></strong>
                <input asp-for="DataInicial" class="form-control" />
                <span asp-validation-for="DataInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="DataFinal" class="control-label"></label></strong>
                <input asp-for="DataFinal" class="form-control" />
                <span asp-validation-for="DataFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="ValorAtual" class="control-label"></label></strong>
                <input asp-for="ValorAtual" class="form-control" />
                <span asp-validation-for="ValorAtual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="UserFK" class="control-label"></label></strong>
                <select asp-for="UserFK" class="form-control" asp-items="ViewBag.UserFK"></select>
                <span asp-validation-for="UserFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" style="margin-top:10px" />
                <a asp-action="Details" class="btn btn-link" style="margin-left: 10px; margin-top: 10px">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
