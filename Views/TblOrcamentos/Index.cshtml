@model IEnumerable<DWEB_NET.Models.TblOrcamentos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeOrcamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorNecessario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorAtual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeOrcamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorNecessario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorAtual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrcamentoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrcamentoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrcamentoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
