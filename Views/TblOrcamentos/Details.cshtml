@model DWEB_NET.Models.TblOrcamentos

@{
    ViewData["Title"] = "Orcamentos";
}

<h2>Orçamentos</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Valor Necessário</th>
            <th>Data Inicial</th>
            <th>Data Final</th>
            <th>Valor Atual</th>
            <th>Falta</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.NomeOrcamento != null)
        {
            foreach (var orcamento in (List<TblOrcamentos>)ViewBag.NomeOrcamento)
            {
                <tr>
                    <td>@orcamento.NomeOrcamento</td>
                    <td>@orcamento.ValorNecessario</td>
                    <td>@orcamento.DataInicial.ToShortDateString()</td>
                    <td>@orcamento.DataFinal.ToString()</td>
                    <td>@orcamento.ValorAtual</td>
                    <td>@(orcamento.ValorNecessario - orcamento.ValorAtual)</td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit", new { id = orcamento.OrcamentoID })">Editar</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = orcamento.OrcamentoID })">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-action="Create">Back to List</a>
</div>
