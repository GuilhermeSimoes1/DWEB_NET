@model DWEB_NET.Models.TblUtilizadores

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Conta de Utilizador</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />
            <div class="form-group">
                <strong><label asp-for="UserName" class="control-label"></label>:</strong>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="Email" class="control-label"></label>:</strong>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="FirstName" class="control-label"></label>:</strong>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="LastName" class="control-label"></label>:</strong>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="Descricao" class="control-label"></label>:</strong>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserAutent" class="form-control" hidden/>
                <span asp-validation-for="UserAutent" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:flex">
                <input type="submit" value="Guardar" class="btn btn-primary" style="margin-top: 10px" />
                <a asp-action="Index" class="btn btn-link" style="margin-left: 10px; margin-top: 10px">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
